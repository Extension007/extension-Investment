          console.log("‚è∏Ô∏è –ü—Ä–æ–ø—É—Å–∫ –∑–∞–∫—Ä—ã—Ç–∏—è - –º–æ–¥–∞–ª—å–Ω–æ–µ –æ–∫–Ω–æ —Ç–æ–ª—å–∫–æ —á—Ç–æ –æ—Ç–∫—Ä—ã–ª–æ—Å—å");
          return;
        }
        
        // –ü—Ä–æ–ø—É—Å–∫–∞–µ–º, –µ—Å–ª–∏ —ç—Ç–æ –±—ã–ª –∫–ª–∏–∫ –Ω–∞ –∫–Ω–æ–ø–∫–µ –≤–∏–¥–µ–æ (–ø—Ä–æ–≤–µ—Ä—è–µ–º –ø–æ –≤—Ä–µ–º–µ–Ω–∏ –∏ —Ü–µ–ª–∏)
        if (lastVideoButtonClick && 
            Date.now() - lastVideoButtonClick.time < 1000 && 
            (e.target === lastVideoButtonClick.target || e.target === lastVideoButtonClick.button || e.target.closest("[data-video]"))) {
          console.log("‚è∏Ô∏è –ü—Ä–æ–ø—É—Å–∫ –∑–∞–∫—Ä—ã—Ç–∏—è - —ç—Ç–æ –∫–ª–∏–∫ –Ω–∞ –∫–Ω–æ–ø–∫–µ –≤–∏–¥–µ–æ");
          return;
        }
        
        // –ü—Ä–æ–ø—É—Å–∫–∞–µ–º, –µ—Å–ª–∏ –∫–ª–∏–∫ –±—ã–ª –Ω–∞ –∫–Ω–æ–ø–∫–µ –≤–∏–¥–µ–æ –∏–ª–∏ –≤–Ω—É—Ç—Ä–∏ –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞
        if (e.target.closest("[data-video]") || e.target.closest(".modal-content")) {
          return;
        }
        
        // –ü—Ä–æ–≤–µ—Ä—è–µ–º, —á—Ç–æ:
        // 1. –ö–ª–∏–∫ –∏–º–µ–Ω–Ω–æ –Ω–∞ overlay (—Å–∞–º modal), –∞ –Ω–µ –Ω–∞ –µ–≥–æ —Å–æ–¥–µ—Ä–∂–∏–º–æ–µ
        // 2. –ú–æ–¥–∞–ª—å–Ω–æ–µ –æ–∫–Ω–æ –æ—Ç–∫—Ä—ã—Ç–æ
        // 3. –ö–ª–∏–∫ –Ω–µ –Ω–∞ –∫–Ω–æ–ø–∫–µ –∑–∞–∫—Ä—ã—Ç–∏—è
        if (e.target === videoModal && 
            videoModal.style.display === "block" &&
            !e.target.closest("[data-close-video]")) {
          console.log("‚ùå –ó–∞–∫—Ä—ã—Ç–∏–µ –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞ –ø–æ –∫–ª–∏–∫—É –≤–Ω–µ –µ–≥–æ");
          closeVideoModal();
        }
      }, false); // –û–±—ã—á–Ω–∞—è —Ñ–∞–∑–∞, —á—Ç–æ–±—ã –Ω–µ –∫–æ–Ω—Ñ–ª–∏–∫—Ç–æ–≤–∞—Ç—å

      // –ó–∞–∫—Ä—ã—Ç–∏–µ –ø–æ Escape
      window.addEventListener("keydown", (e) => {
        if (e.key === "Escape" && videoModal && videoModal.style.display === "block") {
          closeVideoModal();
        }
      });
    });
  </script>

