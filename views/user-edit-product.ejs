<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <title>Редактировать товар</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header class="main-header">
    <div class="container header-inner">
      <a class="logo" href="/">EXTO</a>
      <nav class="nav">
        <ul class="nav-list">
          <li><a class="nav-link" href="/">Каталог</a></li>
        </ul>
      </nav>
      <div class="header-actions">
        <a class="btn outline" href="/cabinet">← Назад в кабинет</a>
      </div>
    </div>
  </header>

  <main class="container">
    <section class="section">
      <h2>Редактировать товар/услугу</h2>
      <form id="editProductForm" class="form-grid" enctype="multipart/form-data" method="POST" action="/cabinet/product/<%= product._id %>/edit">
        <!-- Селектор типа публикации -->
        <div class="form-section">
          <label for="type">Тип публикации:</label>
          <select id="type" name="type" required>
            <option value="product" <%= (product.type || 'product') === 'product' ? 'selected' : '' %>>Товар</option>
            <option value="service" <%= product.type === 'service' ? 'selected' : '' %>>Услуга</option>
          </select>
        </div>
        
        <!-- Основные поля товара -->
        <input type="text" name="name" value="<%= product.name %>" placeholder="Название товара/услуги" required>
        <textarea name="description" placeholder="Описание товара" rows="4"><%= product.description || '' %></textarea>
        <input type="number" name="price" value="<%= product.price %>" placeholder="Цена" min="0" step="1" required>
        <input type="url" name="link" value="<%= product.link || '' %>" placeholder="Ссылка на товар">
        <input type="url" name="video_url" value="<%= product.video_url || '' %>" placeholder="YouTube ссылка">
        
        <!-- Поля контактов продавца -->
        <div class="form-section">
          <h3>Контакты продавца</h3>
          <input type="tel" name="phone" value="<%= (product.contacts && product.contacts.phone) || '' %>" placeholder="Телефон">
          <input type="email" name="email" value="<%= (product.contacts && product.contacts.email) || '' %>" placeholder="Email">
          <input type="text" name="telegram" value="<%= (product.contacts && product.contacts.telegram) || '' %>" placeholder="Telegram (например: @username)">
          <input type="text" name="whatsapp" value="<%= (product.contacts && product.contacts.whatsapp) || '' %>" placeholder="WhatsApp (номер телефона)">
          <textarea name="contact_method" placeholder="Способ связи (например: Звоните с 9:00 до 18:00)" rows="2"><%= (product.contacts && product.contacts.contact_method) || '' %></textarea>
        </div>

        <!-- Текущие изображения -->
        <% 
          const currentImages = product.images && Array.isArray(product.images) && product.images.length > 0 
            ? product.images 
            : (product.image_url ? [product.image_url] : []);
        %>
        <% if (currentImages.length > 0) { %>
          <div class="form-section">
            <h3>Текущие изображения:</h3>
            <div class="current-images-container" style="display:grid;grid-template-columns:repeat(auto-fill, minmax(100px, 1fr));gap:10px;margin-bottom:10px;">
              <% currentImages.forEach((img, idx) => { %>
                <div class="current-image-item" data-image-index="<%= idx %>" style="position:relative;aspect-ratio:1;overflow:hidden;border-radius:8px;border:2px solid #ddd;">
                  <img src="<%= img %>" alt="Изображение <%= idx + 1 %>" style="width:100%;height:100%;object-fit:cover;">
                  <button type="button" class="remove-image-btn" data-image-index="<%= idx %>" aria-label="Удалить изображение" style="position:absolute;top:5px;right:5px;background:#f44336;color:#fff;border:none;border-radius:50%;width:24px;height:24px;cursor:pointer;font-size:18px;line-height:1;">×</button>
                </div>
              <% }) %>
            </div>
            <input type="hidden" name="current_images" id="currentImagesInput" value="<%= JSON.stringify(currentImages) %>">
          </div>
        <% } %>

        <!-- Загрузка новых изображений -->
        <div class="form-section">
          <label for="images">Добавить новые изображения (до 5 штук всего):</label>
          <input 
            type="file" 
            id="images" 
            name="images" 
            accept="image/png,image/jpeg,image/jpg,image/webp" 
            multiple
            data-max-files="5"
          >
          <small class="form-hint">Можно загрузить до 5 изображений всего. Форматы: PNG, JPEG, JPG, WEBP. Максимальный размер: 5MB на файл.</small>
          <div id="imagePreview" class="image-preview-container" style="display:grid;grid-template-columns:repeat(auto-fill, minmax(100px, 1fr));gap:10px;margin-top:10px;"></div>
        </div>

        <select name="category" required>
          <option value="home" <%= product.category === 'home' ? 'selected' : '' %>>Для дома</option>
          <option value="beauty" <%= product.category === 'beauty' ? 'selected' : '' %>>Красота и здоровье</option>
          <option value="auto" <%= product.category === 'auto' ? 'selected' : '' %>>Авто мото</option>
          <option value="electric" <%= product.category === 'electric' ? 'selected' : '' %>>Электрика</option>
          <option value="electronics" <%= product.category === 'electronics' ? 'selected' : '' %>>Электроника</option>
          <option value="plumbing" <%= product.category === 'plumbing' ? 'selected' : '' %>>Сантехника</option>
        </select>

        <button type="submit" class="btn primary">Сохранить изменения</button>
      </form>
      <div id="editProductMsg" class="note" style="margin-top:10px;"></div>
    </section>
  </main>

  <footer class="footer">
    <p>© 2025 EXTO Ecosystem</p>
  </footer>

  <script>
    // Управление текущими изображениями
    let currentImages = <%= JSON.stringify(currentImages) %>;

    // Удаление изображения из списка текущих
    document.querySelectorAll('.remove-image-btn').forEach(btn => {
      btn.addEventListener('click', function() {
        const index = parseInt(this.getAttribute('data-image-index'));
        // Пересчитываем индексы после удаления
        const newImages = [];
        currentImages.forEach((img, idx) => {
          if (idx !== index) newImages.push(img);
        });
        currentImages = newImages;
        updateCurrentImages();
        this.closest('.current-image-item').remove();
      });
    });

    // Обновление скрытого поля с текущими изображениями
    function updateCurrentImages() {
      const input = document.getElementById('currentImagesInput');
      if (input) {
        input.value = JSON.stringify(currentImages);
      }
    }

    // Валидация количества файлов перед отправкой
    document.getElementById('editProductForm').addEventListener('submit', function(e) {
      const fileInput = document.getElementById('images');
      const totalImages = currentImages.length + fileInput.files.length;
      
      if (totalImages > 5) {
        e.preventDefault();
        alert('Максимальное количество изображений: 5. Текущих: ' + currentImages.length + ', новых: ' + fileInput.files.length);
        return false;
      }
    });

    // Предпросмотр выбранных изображений
    document.getElementById('images').addEventListener('change', function(e) {
      const preview = document.getElementById('imagePreview');
      preview.innerHTML = '';
      
      const totalImages = currentImages.length + this.files.length;
      if (totalImages > 5) {
        alert('Максимальное количество изображений: 5. Текущих: ' + currentImages.length + ', новых: ' + this.files.length);
        this.value = '';
        return;
      }

      Array.from(this.files).forEach((file, index) => {
        if (file.size > 5 * 1024 * 1024) {
          alert(`Файл "${file.name}" превышает размер 5MB`);
          return;
        }

        const reader = new FileReader();
        reader.onload = function(e) {
          const div = document.createElement('div');
          div.style.position = 'relative';
          div.style.aspectRatio = '1';
          div.style.overflow = 'hidden';
          div.style.borderRadius = '8px';
          div.style.border = '2px solid #ddd';
          
          const img = document.createElement('img');
          img.src = e.target.result;
          img.style.width = '100%';
          img.style.height = '100%';
          img.style.objectFit = 'cover';
          
          div.appendChild(img);
          preview.appendChild(div);
        };
        reader.readAsDataURL(file);
      });
    });

    // Обработка отправки формы
    document.getElementById('editProductForm').addEventListener('submit', async function(e) {
      e.preventDefault();
      const formData = new FormData(this);
      const msg = document.getElementById('editProductMsg');
      
      msg.textContent = "Отправка...";
      msg.style.color = "#666";
      
      try {
        const res = await fetch('/cabinet/product/<%= product._id %>/edit', {
          method: 'POST',
          body: formData
        });
        
        const contentType = res.headers.get("content-type");
        if (!contentType || !contentType.includes("application/json")) {
          const text = await res.text();
          console.error("❌ Ответ не JSON:", text);
          msg.textContent = "Ошибка: " + (text || "Неверный формат ответа");
          msg.style.color = "#b00020";
          return;
        }
        
        const data = await res.json();
        
        if (data.success) {
          msg.textContent = 'Товар успешно обновлен!';
          msg.style.color = 'green';
          setTimeout(() => {
            window.location.href = '/cabinet';
          }, 1500);
        } else {
          msg.textContent = data.message || 'Ошибка при обновлении товара';
          msg.style.color = '#b00020';
        }
      } catch (err) {
        msg.textContent = 'Ошибка сети: ' + err.message;
        msg.style.color = '#b00020';
      }
    });
  </script>
</body>
</html>

