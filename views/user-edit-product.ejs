  <script src="/js/edit-form.js"></script>
  <script>
    // –ü–æ–ª—É—á–µ–Ω–∏–µ –¥–∞–Ω–Ω—ã—Ö –æ—Ç —Å–µ—Ä–≤–µ—Ä–∞
    const serverDataEl = document.getElementById('serverData');
