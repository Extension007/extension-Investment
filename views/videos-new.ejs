<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <title>Добавить видео — Albamount</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes">
  <meta name="csrf-token" content="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
  <link rel="icon" href="/favicon.ico" type="image/x-icon">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css?v=1.0.1">
  <link rel="stylesheet" href="/header-tabs.css?v=1.0.1">
</head>
<body>
    <div id="bg-animated" aria-hidden="true"></div>
    <!-- Одноэтажный header без вкладок -->
    <header class="main-header">
      <div class="container header-inner">
        <a class="logo" href="/"><img src="/albamount.png" alt="ALBAMOUNT" class="logo-img"></a>
        <div class="header-actions">
          <% if (isAuth) { %>
            <% if (isAdmin) { %>
              <a class="btn outline" href="/admin">Админ-панель</a>
            <% } else { %>
              <a class="btn outline" href="/cabinet">Личный кабинет</a>
            <% } %>
          <% } else { %>
            <a class="btn outline" href="/user/login">Вход</a>
            <button id="openRegister" type="button" class="btn outline">Регистрация</button>
          <% } %>
        </div>
      </div>
    </header>

    <main class="container mt-4">
        <h1 class="mb-4">Добавить видео</h1>

        <form id="videoForm" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="videoUrl" class="form-label">Ссылка на видео *</label>
                <input type="url" class="form-control" id="videoUrl" name="videoUrl" required>
                <div class="invalid-feedback">Пожалуйста, укажите ссылку на видео</div>
                <small class="form-text text-muted">Поддерживаются YouTube, Vimeo и другие платформы</small>
            </div>

            <div class="mb-3">
                <label for="platform" class="form-label">Платформа</label>
                <input type="text" class="form-control" id="platform" name="platform" placeholder="YouTube, Vimeo и т.д.">
            </div>

            <div class="mb-3">
                <label for="title" class="form-label">Название *</label>
                <input type="text" class="form-control" id="title" name="title" required>
                <div class="invalid-feedback">Пожалуйста, укажите название видео</div>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Описание</label>
                <textarea class="form-control" id="description" name="description" rows="3"></textarea>
            </div>

            <div class="mb-3">
                <label for="genres" class="form-label">Жанры (через запятую)</label>
                <input type="text" class="form-control" id="genres" name="genres" placeholder="например: музыка, спорт, образование">
            </div>

            <button type="submit" class="btn btn-primary">Добавить видео</button>
            <a href="/videos" class="btn btn-secondary">Отмена</a>
        </form>
    </main>

    <!-- Footer с вкладками для мобильных устройств -->
    <footer class="mobile-tabs-footer">
      <div class="mobile-tabs-container">
        <a href="/products" class="mobile-tab-button <%= typeof activeTab !== 'undefined' && activeTab === 'products' ? 'active' : '' %>">
          Товары
        </a>
        <a href="/services" class="mobile-tab-button <%= typeof activeTab !== 'undefined' && activeTab === 'services' ? 'active' : '' %>">
          Услуги
        </a>
        <a href="/ad" class="mobile-tab-button <%= typeof activeTab !== 'undefined' && activeTab === 'ad' ? 'active' : '' %>">
          Реклама
        </a>
        <a href="/about" class="mobile-tab-button <%= typeof activeTab !== 'undefined' && activeTab === 'about' ? 'active' : '' %>">
          О Нас
        </a>
        <a href="/contacts" class="mobile-tab-button <%= typeof activeTab !== 'undefined' && activeTab === 'contacts' ? 'active' : '' %>">
          Контакты
        </a>
        <a href="/videos" class="mobile-tab-button active">
          Видео
        </a>
      </div>
    </footer>

    <!-- FIX: Полноэкранный overlay для YouTube видео -->
    <div id="videoOverlay" class="video-overlay" aria-hidden="true" style="display:none;">
      <div class="video-overlay-container">
        <button class="video-overlay-close" data-close-video aria-label="Закрыть видео">&times;</button>
        <div class="video-overlay-content">
          <iframe id="videoOverlayFrame" src="" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
      </div>
    </div>

    <!-- Bootstrap script for safe EJS → JS data transfer -->
    <script src="/utils/bootstrap.js"></script>

    <!-- FIX: Подключаем основной скрипт (включает весь JS: youtube init, модалки, рейтинг, категории, регистрация) -->
    <script src="/script.js?v=1.0.1"></script>

    <!-- Подключаем скрипт для предотвращения перекрытия контента футером -->
    <script src="/fix-footer-overlap.js?v=1.0.1"></script>

    <script>
        document.getElementById('videoForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            const form = e.target;
            if (!form.checkValidity()) {
                form.classList.add('was-validated');
                return;
            }

            const formData = {
                videoUrl: document.getElementById('videoUrl').value,
                platform: document.getElementById('platform').value,
                title: document.getElementById('title').value,
                description: document.getElementById('description').value,
                genres: document.getElementById('genres').value
            };

            try {
                const response = await fetch('/api/videos', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'application/json'
                    },
                    body: JSON.stringify(formData)
                });

                const result = await response.json();
                if (result.success) {
                    alert('Видео успешно добавлено и отправлено на модерацию!');
                    window.location.href = '/videos';
                } else {
                    alert(result.message || 'Ошибка при добавлении видео');
                }
            } catch (error) {
                alert('Ошибка при добавлении видео');
            }
        });
    </script>
</body>
</html>
