          "finance": { label: "–§–∏–Ω–∞–Ω—Å—ã –∏ –∏–Ω–≤–µ—Å—Ç–∏—Ü–∏–∏" },
          "education": { label: "–û–±—Ä–∞–∑–æ–≤–∞–Ω–∏–µ –∏ –∫–∞—Ä—å–µ—Ä–∞" },
          "food_delivery": { label: "–ü—Ä–æ–¥—É–∫—Ç—ã –ø–∏—Ç–∞–Ω–∏—è –∏ –¥–æ—Å—Ç–∞–≤–∫–∞" },
          "sports": { label: "–°–ø–æ—Ä—Ç –∏ –∞–∫—Ç–∏–≤–Ω—ã–π –æ–±—Ä–∞–∑ –∂–∏–∑–Ω–∏" },
          "ar_vr": { label: "AR/VR‚Äë–∫–∞—Ç–µ–≥–æ—Ä–∏–∏" },
          "remote_work": { label: "–£–¥–∞–ª—ë–Ω–Ω–∞—è —Ä–∞–±–æ—Ç–∞ –∏ –æ—Ñ–∏—Å" }
        }
      }
    };

    // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –≥–µ–Ω–µ—Ä–∞—Ü–∏–∏ –∏–µ—Ä–∞—Ä—Ö–∏—á–µ—Å–∫–æ–≥–æ –≤—ã–±–æ—Ä–∞ –∫–∞—Ç–µ–≥–æ—Ä–∏–π
    function buildHierarchicalSelector(parentElement, categories, prefix = '', level = 0) {
      parentElement.innerHTML = '';
      
      const container = document.createElement('div');
      container.style.marginLeft = level * 20 + 'px';
      container.style.marginTop = '10px';
      
      const select = document.createElement('select');
      select.className = 'category-select';
      select.setAttribute('data-level', level);
      select.innerHTML = '<option value="">–í—ã–±–µ—Ä–∏—Ç–µ ' + (level === 0 ? '–æ—Å–Ω–æ–≤–Ω—É—é –∫–∞—Ç–µ–≥–æ—Ä–∏—é' : '–ø–æ–¥–∫–∞—Ç–µ–≥–æ—Ä–∏—é') + '</option>';
      
      for (const [key, value] of Object.entries(categories)) {
        const option = document.createElement('option');
        const fullKey = prefix ? `${prefix}.${key}` : key;
        option.value = fullKey;
        option.textContent = value.label;
        select.appendChild(option);
      }
      
      container.appendChild(select);
      parentElement.appendChild(container);
      
      select.addEventListener('change', function() {
        const selectedValue = this.value;
        if (selectedValue) {
          // –û–±–Ω–æ–≤–ª—è–µ–º —Å–∫—Ä—ã—Ç–æ–µ –ø–æ–ª–µ –∫–∞—Ç–µ–≥–æ—Ä–∏–∏
          document.querySelector('input[name="category"], select[name="category"]').value = selectedValue;
          
          // –£–¥–∞–ª—è–µ–º –≤—Å–µ –¥–æ—á–µ—Ä–Ω–∏–µ —Å–µ–ª–µ–∫—Ç–æ—Ä—ã
          const childSelectors = parentElement.querySelectorAll(`.category-select[data-level]:not([data-level="${level}"])`);
          childSelectors.forEach(child => {
            if (parseInt(child.getAttribute('data-level')) > level) {
              child.closest('div').remove();
            }
          });
          
          // –ï—Å–ª–∏ —É –≤—ã–±—Ä–∞–Ω–Ω–æ–π –∫–∞—Ç–µ–≥–æ—Ä–∏–∏ –µ—Å—Ç—å –ø–æ–¥–∫–∞—Ç–µ–≥–æ—Ä–∏–∏, —Å–æ–∑–¥–∞–µ–º –Ω–æ–≤—ã–π —Å–µ–ª–µ–∫—Ç–æ—Ä
          const categoryPath = selectedValue.split('.');
          let currentCategory = hierarchicalCategories;
          
          for (const path of categoryPath) {
            if (currentCategory && currentCategory[path]) {
              currentCategory = currentCategory[path].children;
            } else {
              currentCategory = null;
              break;
            }
          }
          
          if (currentCategory) {
            buildHierarchicalSelector(parentElement, currentCategory, level + 1, selectedValue);
          }
        }
      });
    }

    // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –∏–µ—Ä–∞—Ä—Ö–∏—á–µ—Å–∫–æ–≥–æ –≤—ã–±–æ—Ä–∞ –∫–∞—Ç–µ–≥–æ—Ä–∏–π
    document.addEventListener('DOMContentLoaded', function() {
      const categorySelectorContainer = document.getElementById('categorySelectorContainer');
      const hierarchicalDiv = document.getElementById('hierarchicalCategorySelector');
      const categorySelect = document.getElementById('categorySelect');
      
      // –°–æ–∑–¥–∞–µ–º –∫–Ω–æ–ø–∫—É –¥–ª—è –ø–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏—è –≤ –∏–µ—Ä–∞—Ä—Ö–∏—á–µ—Å–∫–∏–π —Ä–µ–∂–∏–º
      const hierarchicalToggleBtn = document.createElement('button');
      hierarchicalToggleBtn.type = 'button';
      hierarchicalToggleBtn.textContent = '–ò—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å –∏–µ—Ä–∞—Ä—Ö–∏—á–µ—Å–∫–∏–π –≤—ã–±–æ—Ä';
      hierarchicalToggleBtn.className = 'btn small outline';
      hierarchicalToggleBtn.style.marginTop = '10px';
      hierarchicalToggleBtn.style.display = 'block';
      
      hierarchicalToggleBtn.addEventListener('click', function() {
        categorySelect.value = ''; // –°–±—Ä–∞—Å—ã–≤–∞–µ–º –≤—ã–±–æ—Ä –æ–±—ã—á–Ω–æ–π –∫–∞—Ç–µ–≥–æ—Ä–∏–∏
        categorySelect.style.display = 'none'; // –°–∫—Ä—ã–≤–∞–µ–º –æ–±—ã—á–Ω—ã–π —Å–µ–ª–µ–∫—Ç–æ—Ä
        hierarchicalDiv.style.display = 'block'; // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –∏–µ—Ä–∞—Ä—Ö–∏—á–µ—Å–∫–∏–π —Å–µ–ª–µ–∫—Ç–æ—Ä
        hierarchicalToggleBtn.style.display = 'none'; // –°–∫—Ä—ã–≤–∞–µ–º –∫–Ω–æ–ø–∫—É –ø–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏—è
        
        // –°–æ–∑–¥–∞–µ–º —Å–∫—Ä—ã—Ç–æ–µ –ø–æ–ª–µ –¥–ª—è –æ—Ç–ø—Ä–∞–≤–∫–∏ –≤—ã–±—Ä–∞–Ω–Ω–æ–π –∏–µ—Ä–∞—Ä—Ö–∏—á–µ—Å–∫–æ–π –∫–∞—Ç–µ–≥–æ—Ä–∏–∏
        if (!document.querySelector('input[name="hierarchical_category"]')) {
          const hiddenInput = document.createElement('input');
          hiddenInput.type = 'hidden';
          hiddenInput.name = 'category'; // –ò—Å–ø–æ–ª—å–∑—É–µ–º —Ç–æ –∂–µ –∏–º—è, —á—Ç–æ –∏ –æ–±—ã—á–Ω—ã–π —Å–µ–ª–µ–∫—Ç–æ—Ä
          hiddenInput.id = 'hierarchicalCategoryValue';
          document.getElementById('addProductForm').appendChild(hiddenInput);
        }
        
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∏—Ä—É–µ–º –∏–µ—Ä–∞—Ä—Ö–∏—á–µ—Å–∫–∏–π —Å–µ–ª–µ–∫—Ç–æ—Ä
        buildHierarchicalSelector(hierarchicalDiv, hierarchicalCategories, 0, '');
      });
      
      categorySelect.addEventListener('change', function() {
        if (this.value) {
          // –ï—Å–ª–∏ –≤—ã–±—Ä–∞–Ω–∞ —Å—Ç–∞—Ä–∞—è –∫–∞—Ç–µ–≥–æ—Ä–∏—è, —Å–∫—Ä—ã–≤–∞–µ–º –∏–µ—Ä–∞—Ä—Ö–∏—á–µ—Å–∫–∏–π –≤—ã–±–æ—Ä –∏ –∫–Ω–æ–ø–∫—É –ø–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏—è
          hierarchicalDiv.style.display = 'none';
          const toggleBtn = document.querySelector('#hierarchicalToggleBtn');
          if (toggleBtn) toggleBtn.style.display = 'none';
        } else {
          // –ï—Å–ª–∏ –≤—ã–±—Ä–∞–Ω–∞ –ø—É—Å—Ç–∞—è –æ–ø—Ü–∏—è, –ø–æ–∫–∞–∑—ã–≤–∞–µ–º –∫–Ω–æ–ø–∫—É –ø–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏—è
          hierarchicalToggleBtn.style.display = 'block';
        }
      });
      
      // –î–æ–±–∞–≤–ª—è–µ–º –∫–Ω–æ–ø–∫—É –ø–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏—è –ø–æ—Å–ª–µ —Å–µ–ª–µ–∫—Ç–æ—Ä–∞
      categorySelectorContainer.appendChild(hierarchicalToggleBtn);
      
      // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –∫–Ω–æ–ø–∫—É –ø–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏—è, –µ—Å–ª–∏ –≤—ã–±—Ä–∞–Ω–∞ –ø—É—Å—Ç–∞—è –æ–ø—Ü–∏—è
      if (!categorySelect.value) {
        hierarchicalToggleBtn.style.display = 'block';
      }

      // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –¥–∏–Ω–∞–º–∏—á–µ—Å–∫–æ–π –∑–∞–≥—Ä—É–∑–∫–∏ –∫–∞—Ç–µ–≥–æ—Ä–∏–π
      const categorySelectNew = document.getElementById('categorySelect');
      const subcategorySelector = document.getElementById('subcategorySelector');
      const subcategorySelect = document.getElementById('subcategorySelect');
      const backToBlocksBtn = document.getElementById('backToBlocks');

      let currentCategories = [];

      // –ó–∞–≥—Ä—É–∂–∞–µ–º –±–ª–æ–∫–∏ –∫–∞—Ç–µ–≥–æ—Ä–∏–π –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ —Å—Ç—Ä–∞–Ω–∏—Ü—ã
      loadCategoryBlocks();

      async function loadCategoryBlocks() {
        try {
          const response = await fetch('/api/categories/tree/product');
          const data = await response.json();

          if (data.success && data.categories) {
            currentCategories = data.categories;
            renderCategoryBlocks(data.categories);
          } else {
            console.error('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –±–ª–æ–∫–æ–≤ –∫–∞—Ç–µ–≥–æ—Ä–∏–π:', data.message);
          }
        } catch (error) {
          console.error('–û—à–∏–±–∫–∞ —Å–µ—Ç–∏ –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ –±–ª–æ–∫–æ–≤:', error);
        }
      }

      function renderCategoryBlocks(blocks) {
        if (!categorySelectNew) return;

        // –û—á–∏—â–∞–µ–º —Å–µ–ª–µ–∫—Ç, –æ—Å—Ç–∞–≤–ª—è–µ–º —Ç–æ–ª—å–∫–æ –ø–µ—Ä–≤—É—é –æ–ø—Ü–∏—é
        categorySelectNew.innerHTML = '<option value="">–í—ã–±–µ—Ä–∏—Ç–µ –∫–∞—Ç–µ–≥–æ—Ä–∏—é</option>';

        blocks.forEach(block => {
          const option = document.createElement('option');
          option.value = block._id;
          option.textContent = `${block.icon || ''} ${block.name}`;
          categorySelectNew.appendChild(option);
        });
      }

      async function loadSubcategories(blockId, blockName) {
        try {
          const response = await fetch(`/api/categories/children/${blockId}`);
          const data = await response.json();

          if (data.success && data.categories) {
            renderSubcategories(data.categories, blockName);
          } else {
            console.error('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –ø–æ–¥–∫–∞—Ç–µ–≥–æ—Ä–∏–π:', data.message);
          }
        } catch (error) {
          console.error('–û—à–∏–±–∫–∞ —Å–µ—Ç–∏ –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ –ø–æ–¥–∫–∞—Ç–µ–≥–æ—Ä–∏–π:', error);
        }
      }

      function renderSubcategories(subcategories, blockName) {
        if (!subcategorySelector || !subcategorySelect) return;

        subcategorySelect.innerHTML = '<option value="">–í—ã–±–µ—Ä–∏—Ç–µ –ø–æ–¥–∫–∞—Ç–µ–≥–æ—Ä–∏—é</option>';

        subcategories.forEach(sub => {
          const option = document.createElement('option');
          option.value = sub._id;
          option.textContent = `${sub.icon || ''} ${sub.name}`;
          subcategorySelect.appendChild(option);
        });

        // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä –ø–æ–¥–∫–∞—Ç–µ–≥–æ—Ä–∏–π
        subcategorySelector.style.display = 'block';
      }

      function hideSubcategories() {
        if (subcategorySelector) {
          subcategorySelector.style.display = 'none';
        }
      }

      // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –≤—ã–±–æ—Ä–∞ –±–ª–æ–∫–∞
      if (categorySelectNew) {
        categorySelectNew.addEventListener('change', function() {
          const selectedBlockId = this.value;
          if (selectedBlockId) {
            // –ù–∞—Ö–æ–¥–∏–º –≤—ã–±—Ä–∞–Ω–Ω—ã–π –±–ª–æ–∫
            const selectedBlock = currentCategories.find(block => block._id === selectedBlockId);
            if (selectedBlock) {
              loadSubcategories(selectedBlockId, selectedBlock.name);
            }
          } else {
            hideSubcategories();
          }
        });
      }

      // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –≤—ã–±–æ—Ä–∞ –ø–æ–¥–∫–∞—Ç–µ–≥–æ—Ä–∏–∏
      if (subcategorySelect) {
        subcategorySelect.addEventListener('change', function() {
          const selectedCategoryId = this.value;
          // –û–±–Ω–æ–≤–ª—è–µ–º —Å–∫—Ä—ã—Ç–æ–µ –ø–æ–ª–µ –æ—Å–Ω–æ–≤–Ω–æ–π —Ñ–æ—Ä–º—ã
          if (selectedCategoryId) {
            categorySelectNew.value = selectedCategoryId;
          }
        });
      }

      // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –∫–Ω–æ–ø–∫–∏ "–ù–∞–∑–∞–¥ –∫ –±–ª–æ–∫–∞–º"
      if (backToBlocksBtn) {
        backToBlocksBtn.addEventListener('click', function(e) {
          e.stopPropagation();
          hideSubcategories();
          categorySelectNew.value = '';
        });
      }
    });
  </script>
