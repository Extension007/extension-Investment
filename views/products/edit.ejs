              break;
            }
          }
          
          if (currentCategory) {
            buildHierarchicalSelector(parentElement, currentCategory, level + 1, selectedValue, currentValue);
          }
        }
      });
      
      // –ï—Å–ª–∏ —É –Ω–∞—Å –µ—Å—Ç—å —Ç–µ–∫—É—â–µ–µ –∑–Ω–∞—á–µ–Ω–∏–µ –∏ —ç—Ç–æ –Ω–µ —Å–∞–º—ã–π –≥–ª—É–±–æ–∫–∏–π —É—Ä–æ–≤–µ–Ω—å, –ø—Ä–æ–¥–æ–ª–∂–∞–µ–º —Å—Ç—Ä–æ–∏—Ç—å –∏–µ—Ä–∞—Ä—Ö–∏—é
