<%- include('partials/email-start', { subject, preheader, logoUrl }) %>
<h1 style="margin: 0 0 16px; font-size: 24px; color: #111827; text-align: center;">
  Уведомление администратору
</h1>
<p style="margin: 0 0 12px; font-size: 15px; line-height: 1.6;">
  Тип события: <strong><%= eventType %></strong>
</p>
<p style="margin: 0 0 20px; font-size: 15px; line-height: 1.6;">
  <%= details %>
</p>
<% if (data && Object.keys(data).length > 0) { %>
  <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="margin-bottom: 20px; border-collapse: collapse;">
    <% Object.entries(data).forEach(([key, value]) => { %>
      <tr>
        <td style="padding: 6px 0; font-size: 13px; color: #6b7280; width: 40%;"><%= key %></td>
        <td style="padding: 6px 0; font-size: 13px; color: #111827;"><%= value %></td>
      </tr>
    <% }); %>
  </table>
<% } %>
<table role="presentation" cellspacing="0" cellpadding="0" border="0" style="margin: 0 auto 12px;">
  <tr>
    <td align="center" style="border-radius: 10px; background-color: #ff3333;">
      <a href="<%= adminPanelLink %>" target="_blank" style="display: inline-block; padding: 12px 26px; color: #ffffff; text-decoration: none; border-radius: 10px; font-weight: 700; font-size: 14px;">
        Перейти в админ-панель
      </a>
    </td>
  </tr>
</table>
<%- include('partials/email-end', { baseUrl, supportEmail }) %>
