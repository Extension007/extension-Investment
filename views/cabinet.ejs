  <main class="container">
    <section class="section">
      <h2>–°–æ–∑–¥–∞—Ç—å –∫–∞—Ä—Ç–æ—á–∫—É —Ç–æ–≤–∞—Ä–∞</h2>
      <form id="createProductForm" class="form-grid" enctype="multipart/form-data" method="POST" action="/cabinet/product">
        <input type="text" name="name" placeholder="–ù–∞–∑–≤–∞–Ω–∏–µ" required>
        <input type="text" name="description" placeholder="–û–ø–∏—Å–∞–Ω–∏–µ">
        <input type="url" name="link" placeholder="–°—Å—ã–ª–∫–∞">
        <input type="url" name="video_url" placeholder="YouTube —Å—Å—ã–ª–∫–∞">
        <input type="number" name="price" placeholder="–¶–µ–Ω–∞" min="0" step="1" required>
        <input type="file" name="image" accept="image/*">
        <select name="category" required>
          <option value="home">–î–ª—è –¥–æ–º–∞</option>
          <option value="beauty">–ö—Ä–∞—Å–æ—Ç–∞ –∏ –∑–¥–æ—Ä–æ–≤—å–µ</option>
          <option value="auto">–ê–≤—Ç–æ –º–æ—Ç–æ</option>
          <option value="electric">–≠–ª–µ–∫—Ç—Ä–∏–∫–∞</option>
          <option value="electronics">–≠–ª–µ–∫—Ç—Ä–æ–Ω–∏–∫–∞</option>
          <option value="plumbing">–°–∞–Ω—Ç–µ—Ö–Ω–∏–∫–∞</option>
        </select>
        <button type="submit" class="btn primary">–û—Ç–ø—Ä–∞–≤–∏—Ç—å</button>
      </form>
      <div id="createProductMsg" class="note" style="margin-top:10px;"></div>
    </section>

    <section class="section">
      <h2>–ú–æ–∏ –∫–∞—Ä—Ç–æ—á–∫–∏</h2>
      <% if (products && products.length) { %>
        <div class="product-grid">
          <% products.forEach(p => { %>
            <div class="product-card">
              <h3 class="product-title"><%= p.name %></h3>
              <% if (p.image_url) { %>
                <img src="<%= p.image_url %>" alt="<%= p.name %>">
              <% } else { %>
                <div class="no-image">–ù–µ—Ç –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è</div>
              <% } %>
              <div class="product-bottom">
                <!-- –°—Ç–∞—Ç—É—Å –∫–∞—Ä—Ç–æ—á–∫–∏ -->
                <div style="text-align:center;margin-bottom:10px;">
                  <% if (p.status === "pending") { %>
                    <span class="badge" style="background:#ff9800;color:#fff;padding:4px 12px;border-radius:6px;font-size:0.9rem;">
                      ‚è≥ –ù–∞ –º–æ–¥–µ—Ä–∞—Ü–∏–∏
                    </span>
                  <% } else if (p.status === "approved") { %>
                    <span class="badge" style="background:#4caf50;color:#fff;padding:4px 12px;border-radius:6px;font-size:0.9rem;">
                      ‚úÖ –û–ø—É–±–ª–∏–∫–æ–≤–∞–Ω–æ
                    </span>
                  <% } else if (p.status === "rejected") { %>
                    <span class="badge" style="background:#f44336;color:#fff;padding:4px 12px;border-radius:6px;font-size:0.9rem;">
                      ‚ùå –û—Ç–∫–ª–æ–Ω–µ–Ω–æ
                    </span>
                    <% if (p.rejection_reason) { %>
                      <p style="color:#f44336;font-size:0.85rem;margin-top:5px;"><%= p.rejection_reason %></p>
                    <% } %>
                  <% } %>
                </div>

                <div class="row">
                  <span class="muted">–¢–µ–∫—É—â–∞—è —Ü–µ–Ω–∞:</span>
                  <strong class="price" data-id="<%= p._id %>"><%= p.price %></strong>
                </div>
                <% if (p.status === "approved" || p.status === "pending") { %>
                <form class="priceForm" data-id="<%= p._id %>">
                  <input type="number" name="price" min="0" step="1" placeholder="–ù–æ–≤–∞—è —Ü–µ–Ω–∞" required>
                  <button type="submit" class="btn small">–û–±–Ω–æ–≤–∏—Ç—å —Ü–µ–Ω—É</button>
                </form>
                <% } %>
                <p class="product-desc"><%= p.description || "‚Äî" %></p>
                <div class="product-actions">
                  <% if (p.link) { %>
                    <a class="btn small outline" href="<%= p.link %>" target="_blank" rel="noopener">–°—Å—ã–ª–∫–∞</a>
                  <% } %>
                  <% if (p.video_url) { %>
                    <button class="btn small" data-video="<%= p.video_url %>">–û–±–∑–æ—Ä</button>
                  <% } %>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <p class="empty-state">–£ –≤–∞—Å –ø–æ–∫–∞ –Ω–µ—Ç –∫–∞—Ä—Ç–æ—á–µ–∫.</p>
      <% } %>
    </section>
  </main>

  <footer class="footer">
    <p>¬© 2025 EXTO Ecosystem</p>
  </footer>

  <!-- –ö–æ–Ω—Ç–µ–π–Ω–µ—Ä –¥–ª—è –ø–ª–µ–µ—Ä–∞ (–≤—Å–µ–≥–¥–∞ –≤ DOM, –≤–Ω–µ –º–æ–¥–∞–ª–∫–∏) -->
  <div id="videoFrame"></div>

  <!-- –ú–æ–¥–∞–ª—å–Ω–æ–µ –æ–∫–Ω–æ –¥–ª—è –≤–∏–¥–µ–æ -->
  <div id="videoModal" class="modal" aria-hidden="true">
    <div class="modal-content" role="dialog" aria-modal="true" aria-label="–í–∏–¥–µ–æ –æ–±–∑–æ—Ä">
      <button class="close" data-close-video aria-label="–ó–∞–∫—Ä—ã—Ç—å –≤–∏–¥–µ–æ">&times;</button>
      <!-- –í–Ω—É—Ç—Ä–∏ –º–æ–¥–∞–ª–∫–∏ –ø—Ä–æ—Å—Ç–æ —Å—Å—ã–ª–∫–∞ –Ω–∞ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä -->
      <div id="videoFrameContainer"></div>
    </div>
  </div>

  <!-- YouTube API -->
  <script src="https://www.youtube.com/iframe_api"></script>

  <script>
    let playerCabinet = null;
    let currentVideoIdCabinet = null;

    function onPlayerReadyCabinet(event) {
      console.log("‚úÖ –ü–ª–µ–µ—Ä –≥–æ—Ç–æ–≤ (cabinet)");
      if (currentVideoIdCabinet && typeof event.target.loadVideoById === 'function') {
        event.target.loadVideoById(currentVideoIdCabinet);
        console.log("‚úÖ –í–∏–¥–µ–æ –∑–∞–≥—Ä—É–∂–µ–Ω–æ –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏:", currentVideoIdCabinet);
      }
    }

    window.onYouTubeIframeAPIReady = function() {
      console.log("‚úÖ YouTube IFrame API –≥–æ—Ç–æ–≤ (cabinet)");
      playerCabinet = new YT.Player('videoFrame', {
        width: '100%',
        height: '480',
        playerVars: { rel: 0, playsinline: 1 },
        events: {
          'onReady': onPlayerReadyCabinet,
          'onError': (e) => console.error("‚ùå –û—à–∏–±–∫–∞ –ø–ª–µ–µ—Ä–∞:", e.data)
        }
      });
    };
  </script>

  <script>

    // –§—É–Ω–∫—Ü–∏—è –∏–∑–≤–ª–µ—á–µ–Ω–∏—è videoId –∏–∑ YouTube URL
    function extractVideoId(url) {
      if (!url) return null;
      if (url.includes('/embed/')) return url.split('/embed/')[1].split(/[?#]/)[0];
      if (url.includes('/shorts/')) return url.split('/shorts/')[1].split(/[?#]/)[0];
      if (url.includes('youtu.be/')) return url.split('youtu.be/')[1].split(/[?#]/)[0];
      const match = url.match(/[?&]v=([^&]+)/);
      return match ? match[1] : null;
    }

    document.addEventListener("DOMContentLoaded", () => {
      const form = document.getElementById("createProductForm");
      const msg = document.getElementById("createProductMsg");
      
      if (!form) {
        console.error("‚ùå –§–æ—Ä–º–∞ —Å–æ–∑–¥–∞–Ω–∏—è –∫–∞—Ä—Ç–æ—á–∫–∏ –Ω–µ –Ω–∞–π–¥–µ–Ω–∞!");
        return;
      }
      
      form.addEventListener("submit", async (e) => {
        e.preventDefault();
        e.stopPropagation();
        console.log("üì§ –û—Ç–ø—Ä–∞–≤–∫–∞ —Ñ–æ—Ä–º—ã —Å–æ–∑–¥–∞–Ω–∏—è –∫–∞—Ä—Ç–æ—á–∫–∏ (–ø–µ—Ä–µ—Ö–≤–∞—á–µ–Ω–æ JavaScript)");
        
        const formData = new FormData(form);
        console.log("–î–∞–Ω–Ω—ã–µ —Ñ–æ—Ä–º—ã:", {
          name: formData.get("name"),
          price: formData.get("price"),
          category: formData.get("category"),
          hasImage: !!formData.get("image")
        });
        
        try {
        const res = await fetch("/cabinet/product", { method: "POST", body: formData });
        const json = await res.json();
          console.log("–û—Ç–≤–µ—Ç —Å–µ—Ä–≤–µ—Ä–∞:", json);
          
        if (json.success) {
          msg.textContent = "–ö–∞—Ä—Ç–æ—á–∫–∞ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω–∞ –Ω–∞ –º–æ–¥–µ—Ä–∞—Ü–∏—é.";
          msg.style.color = "green";
          setTimeout(() => location.reload(), 800);
        } else {
          msg.textContent = json.message || "–û—à–∏–±–∫–∞";
            msg.style.color = "#b00020";
            console.error("–û—à–∏–±–∫–∞ —Å–æ–∑–¥–∞–Ω–∏—è –∫–∞—Ä—Ç–æ—á–∫–∏:", json.message);
          }
        } catch (err) {
          console.error("–û—à–∏–±–∫–∞ —Å–µ—Ç–∏:", err);
          msg.textContent = "–û—à–∏–±–∫–∞ —Å–µ—Ç–∏: " + err.message;
          msg.style.color = "#b00020";
        }
      });

      document.querySelectorAll(".priceForm").forEach((f) => {
        f.addEventListener("submit", async (e) => {
          e.preventDefault();
          const id = f.getAttribute("data-id");
          const price = f.querySelector("input[name='price']").value;
          const res = await fetch(`/cabinet/product/${id}/price`, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ price })
          });
          const json = await res.json();
          if (json.success) {
            document.querySelector(`.price[data-id='${id}']`).textContent = json.price;
          } else {
            alert(json.message || "–û—à–∏–±–∫–∞ –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è —Ü–µ–Ω—ã");
          }
        });
      });

      // –í–∏–¥–µ–æ –º–æ–¥–∞–ª–∫–∞
      const videoModal = document.getElementById("videoModal");
      const videoFrame = document.getElementById("videoFrame");

      // –ö–ª–∏–∫ –ø–æ –∫–Ω–æ–ø–∫–µ ¬´–û–±–∑–æ—Ä¬ª
      document.addEventListener('click', (e) => {
        const btn = e.target.closest('.btn[data-video]');
        if (!btn) return;

        const url = btn.getAttribute('data-video');
        const videoId = extractVideoId(url);
        if (!videoId) return;

        currentVideoIdCabinet = videoId;
        console.log("üé¨ –û—Ç–∫—Ä—ã—Ç–∏–µ –≤–∏–¥–µ–æ:", url);

        const videoModal = document.getElementById('videoModal');
        const videoFrame = document.getElementById('videoFrame');
        const videoFrameContainer = document.getElementById('videoFrameContainer');

        // –ü–µ—Ä–µ–º–µ—â–∞–µ–º –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä –≤ –º–æ–¥–∞–ª–∫—É
        if (videoFrame && videoFrameContainer) {
          videoFrameContainer.appendChild(videoFrame);
        }

        videoModal.style.display = 'block';
        videoModal.setAttribute('aria-hidden', 'false');

        if (playerCabinet && typeof playerCabinet.loadVideoById === 'function') {
          playerCabinet.loadVideoById(videoId);
          console.log("‚úÖ –í–∏–¥–µ–æ –∑–∞–≥—Ä—É–∂–µ–Ω–æ:", videoId);
        }
      });

      // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –∑–∞–∫—Ä—ã—Ç–∏—è –º–æ–¥–∞–ª–∫–∏
      document.addEventListener('click', (e) => {
        if (e.target.closest('[data-close-video]')) {
          const videoModal = document.getElementById('videoModal');
          videoModal.style.display = 'none';
          videoModal.setAttribute('aria-hidden', 'true');

          if (playerCabinet && typeof playerCabinet.stopVideo === 'function') {
            playerCabinet.stopVideo();
            console.log("‚úÖ –í–∏–¥–µ–æ –æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–æ (cabinet)");
          }
          currentVideoIdCabinet = null;

          const videoFrame = document.getElementById('videoFrame');
          if (videoFrame && document.body) {
            document.body.appendChild(videoFrame);
          }
        }
      });

      // –ó–∞–∫—Ä—ã—Ç–∏–µ –ø–æ –∫–ª–∏–∫—É –≤–Ω–µ –º–æ–¥–∞–ª–∫–∏
      document.addEventListener('click', (e) => {
        const videoModal = document.getElementById('videoModal');
        if (e.target === videoModal && videoModal.style.display === 'block') {
          videoModal.style.display = 'none';
          videoModal.setAttribute('aria-hidden', 'true');

          if (playerCabinet && typeof playerCabinet.stopVideo === 'function') {
            playerCabinet.stopVideo();
            console.log("‚úÖ –í–∏–¥–µ–æ –æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–æ (cabinet)");
          }
          currentVideoIdCabinet = null;

          const videoFrame = document.getElementById('videoFrame');
          if (videoFrame && document.body) {
            document.body.appendChild(videoFrame);
          }
        }
      });

      // –ó–∞–∫—Ä—ã—Ç–∏–µ –ø–æ Escape
      document.addEventListener('keydown', (e) => {
        const videoModal = document.getElementById('videoModal');
        if (e.key === 'Escape' && videoModal.style.display === 'block') {
          videoModal.style.display = 'none';
          videoModal.setAttribute('aria-hidden', 'true');

          if (playerCabinet && typeof playerCabinet.stopVideo === 'function') {
            playerCabinet.stopVideo();
            console.log("‚úÖ –í–∏–¥–µ–æ –æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–æ (cabinet)");
          }
          currentVideoIdCabinet = null;

          const videoFrame = document.getElementById('videoFrame');
          if (videoFrame && document.body) {
            document.body.appendChild(videoFrame);
          }
        }
      });
    });
  </script>

