    </div>
  </div>

  <!-- YouTube API -->
  <script src="https://www.youtube.com/iframe_api"></script>

  <script>
    let playerCabinet = null;
    let currentVideoIdCabinet = null;

    function onPlayerReadyCabinet(event) {
      console.log("‚úÖ –ü–ª–µ–µ—Ä –≥–æ—Ç–æ–≤ (cabinet)");
      if (currentVideoIdCabinet && typeof event.target.loadVideoById === 'function') {
        event.target.loadVideoById(currentVideoIdCabinet);
        console.log("‚úÖ –í–∏–¥–µ–æ –∑–∞–≥—Ä—É–∂–µ–Ω–æ –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏:", currentVideoIdCabinet);
      }
    }

    window.onYouTubeIframeAPIReady = function() {
      console.log("‚úÖ YouTube IFrame API –≥–æ—Ç–æ–≤ (cabinet)");
      const videoFrame = document.getElementById('videoFrame');
      if (!videoFrame) {
        console.error("‚ùå –ö–æ–Ω—Ç–µ–π–Ω–µ—Ä videoFrame –Ω–µ –Ω–∞–π–¥–µ–Ω (cabinet)");
        return;
      }
      
      // –í—Ä–µ–º–µ–Ω–Ω–æ –ø–æ–∫–∞–∑—ã–≤–∞–µ–º –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä –¥–ª—è –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏–∏ –ø–ª–µ–µ—Ä–∞
      const wasHidden = videoFrame.style.display === 'none';
      if (wasHidden) {
        videoFrame.style.display = 'block';
        videoFrame.style.position = 'absolute';
        videoFrame.style.left = '-9999px';
        videoFrame.style.visibility = 'hidden';
      }
      
      playerCabinet = new YT.Player('videoFrame', {
        width: '100%',
        height: '480',
        playerVars: { rel: 0, playsinline: 1 },
        events: {
          'onReady': onPlayerReadyCabinet,
          'onError': (event) => {
            console.error("‚ùå –û—à–∏–±–∫–∞ –ø–ª–µ–µ—Ä–∞:", event.data);
          }
        }
      });
      
      // –ü–æ—Å–ª–µ –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏–∏ —Å–∫—Ä—ã–≤–∞–µ–º –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä –æ–±—Ä–∞—Ç–Ω–æ
      if (wasHidden) {
        setTimeout(() => {
          videoFrame.style.display = 'none';
          videoFrame.style.position = '';
          videoFrame.style.left = '';
          videoFrame.style.visibility = '';
        }, 100);
      }
    };
  </script>

  <script>

    // –§—É–Ω–∫—Ü–∏—è –∏–∑–≤–ª–µ—á–µ–Ω–∏—è videoId –∏–∑ YouTube URL
    function extractVideoId(url) {
      try {
        if (!url || typeof url !== 'string') return null;
        url = url.trim();
        
        if (url.includes('/embed/')) {
          const embedId = url.match(/embed\/([^?&#]+)/)?.[1];
          if (embedId) {
            return embedId.split('&')[0].split('#')[0].trim();
          }
        }
        
        const u = new URL(url);
        const host = u.hostname.replace(/^www\./, "").toLowerCase();
        let videoId = null;
        
        if (host.includes("youtube.com")) {
          if (u.pathname === "/watch") {
            videoId = u.searchParams.get("v");
          } else if (u.pathname.startsWith("/embed/")) {
            videoId = u.pathname.split("/embed/")[1]?.split("?")[0];
          } else if (u.pathname.startsWith("/shorts/")) {
            videoId = u.pathname.split("/shorts/")[1]?.split("?")[0];
          } else if (u.pathname.startsWith("/v/")) {
            videoId = u.pathname.split("/v/")[1]?.split("?")[0];
          }
        } else if (host === "youtu.be") {
          videoId = u.pathname.slice(1).split("?")[0];
        }
        
        if (videoId) {
          videoId = videoId.split('&')[0].split('#')[0].trim();
          return videoId || null;
        }
        
        return null;
      } catch (err) {
        console.error("–û—à–∏–±–∫–∞ –∏–∑–≤–ª–µ—á–µ–Ω–∏—è videoId:", err);
        return null;
      }
    }

    document.addEventListener("DOMContentLoaded", () => {
      const form = document.getElementById("createProductForm");
      const msg = document.getElementById("createProductMsg");
      
      if (!form) {
        console.error("‚ùå –§–æ—Ä–º–∞ —Å–æ–∑–¥–∞–Ω–∏—è –∫–∞—Ä—Ç–æ—á–∫–∏ –Ω–µ –Ω–∞–π–¥–µ–Ω–∞!");
        return;
      }
      
      form.addEventListener("submit", async (e) => {
        e.preventDefault();
        e.stopPropagation();
        console.log("üì§ –û—Ç–ø—Ä–∞–≤–∫–∞ —Ñ–æ—Ä–º—ã —Å–æ–∑–¥–∞–Ω–∏—è –∫–∞—Ä—Ç–æ—á–∫–∏ (–ø–µ—Ä–µ—Ö–≤–∞—á–µ–Ω–æ JavaScript)");
        
        const formData = new FormData(form);
        console.log("–î–∞–Ω–Ω—ã–µ —Ñ–æ—Ä–º—ã:", {
          name: formData.get("name"),
          price: formData.get("price"),
          category: formData.get("category"),
          hasImage: !!formData.get("image")
        });
        
        try {
        const res = await fetch("/cabinet/product", { method: "POST", body: formData });
        const json = await res.json();
          console.log("–û—Ç–≤–µ—Ç —Å–µ—Ä–≤–µ—Ä–∞:", json);
          
        if (json.success) {
          msg.textContent = "–ö–∞—Ä—Ç–æ—á–∫–∞ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω–∞ –Ω–∞ –º–æ–¥–µ—Ä–∞—Ü–∏—é.";
          msg.style.color = "green";
          setTimeout(() => location.reload(), 800);
        } else {
          msg.textContent = json.message || "–û—à–∏–±–∫–∞";
            msg.style.color = "#b00020";
            console.error("–û—à–∏–±–∫–∞ —Å–æ–∑–¥–∞–Ω–∏—è –∫–∞—Ä—Ç–æ—á–∫–∏:", json.message);
          }
        } catch (err) {
          console.error("–û—à–∏–±–∫–∞ —Å–µ—Ç–∏:", err);
          msg.textContent = "–û—à–∏–±–∫–∞ —Å–µ—Ç–∏: " + err.message;
          msg.style.color = "#b00020";
        }
      });

      document.querySelectorAll(".priceForm").forEach((f) => {
        f.addEventListener("submit", async (e) => {
          e.preventDefault();
          const id = f.getAttribute("data-id");
          const price = f.querySelector("input[name='price']").value;
          const res = await fetch(`/cabinet/product/${id}/price`, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ price })
          });
          const json = await res.json();
          if (json.success) {
            document.querySelector(`.price[data-id='${id}']`).textContent = json.price;
          } else {
            alert(json.message || "–û—à–∏–±–∫–∞ –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è —Ü–µ–Ω—ã");
          }
        });
      });

      // –í–∏–¥–µ–æ –º–æ–¥–∞–ª–∫–∞
      const videoModal = document.getElementById("videoModal");
      const videoFrame = document.getElementById("videoFrame");
      const videoFrameContainer = document.getElementById("videoFrameContainer");

      // –ö–ª–∏–∫ –ø–æ –∫–Ω–æ–ø–∫–µ ¬´–û–±–∑–æ—Ä¬ª
      document.querySelectorAll('.btn[data-video]').forEach(btn => {
        btn.addEventListener('click', () => {
          const url = btn.getAttribute('data-video');
          const videoId = extractVideoId(url);
          if (!videoId) {
            console.error("‚ùå –ù–µ —É–¥–∞–ª–æ—Å—å –∏–∑–≤–ª–µ—á—å videoId –∏–∑ URL:", url);
            return;
          }

          currentVideoIdCabinet = videoId;
          console.log("üé¨ –û—Ç–∫—Ä—ã—Ç–∏–µ –≤–∏–¥–µ–æ:", url);
          console.log("‚úÖ Video ID:", videoId);

          // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä –∏ –ø–µ—Ä–µ–º–µ—â–∞–µ–º –µ–≥–æ –≤ –º–æ–¥–∞–ª–∫—É
          if (videoFrame && videoFrameContainer) {
            videoFrame.style.display = "block";
            videoFrameContainer.appendChild(videoFrame);
          }

          // –û—Ç–∫—Ä—ã–≤–∞–µ–º –º–æ–¥–∞–ª—å–Ω–æ–µ –æ–∫–Ω–æ
          if (videoModal) {
            videoModal.style.display = "block";
            videoModal.setAttribute("aria-hidden", "false");
          }

          if (playerCabinet && typeof playerCabinet.loadVideoById === 'function') {
            playerCabinet.loadVideoById(videoId);
          } else {
            console.log("‚è≥ –ü–ª–µ–µ—Ä –µ—â—ë –Ω–µ –≥–æ—Ç–æ–≤, videoId —Å–æ—Ö—Ä–∞–Ω—ë–Ω –∏ –∑–∞–≥—Ä—É–∑–∏—Ç—Å—è –ø—Ä–∏ onReady");
          }
        });
      });

      // –§—É–Ω–∫—Ü–∏—è –∑–∞–∫—Ä—ã—Ç–∏—è –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞
      function closeVideoModal() {
        if (playerCabinet && typeof playerCabinet.stopVideo === 'function') {
          playerCabinet.stopVideo();
          console.log("‚úÖ –í–∏–¥–µ–æ –æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–æ (cabinet)");
        }
        currentVideoIdCabinet = null;
        
        // –í–æ–∑–≤—Ä–∞—â–∞–µ–º –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä –æ–±—Ä–∞—Ç–Ω–æ –≤ body –∏ —Å–∫—Ä—ã–≤–∞–µ–º
        if (videoFrame && document.body) {
          document.body.appendChild(videoFrame);
          videoFrame.style.display = "none";
        }
        
        if (videoModal) {
          videoModal.style.display = "none";
          videoModal.setAttribute("aria-hidden", "true");
        }
      }

      // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –∑–∞–∫—Ä—ã—Ç–∏—è –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞
      const closeVideoBtn = document.querySelector("[data-close-video]");
      if (closeVideoBtn) {
        closeVideoBtn.addEventListener("click", (e) => {
          e.preventDefault();
          e.stopPropagation();
          closeVideoModal();
        });
      }

      window.addEventListener("click", (e) => {
        if (e.target === videoModal && videoModal.style.display === "block") {
          closeVideoModal();
        }
      });

      window.addEventListener("keydown", (e) => {
        if (e.key === "Escape" && videoModal && videoModal.style.display === "block") {
          closeVideoModal();
        }
      });
    });
  </script>

