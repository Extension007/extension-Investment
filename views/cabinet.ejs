    <section class="section">
      <h2>–ú–æ–∏ –∫–∞—Ä—Ç–æ—á–∫–∏</h2>
      <% if (products && products.length) { %>
        <div class="product-grid">
          <% products.forEach(p => { %>
            <div class="product-card">
              <h3 class="product-title"><%= p.name %></h3>
              <% if (p.image_url) { %>
                <img src="<%= p.image_url %>" alt="<%= p.name %>">
              <% } else { %>
