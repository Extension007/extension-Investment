  <script>
    // –ó–∞–≥—Ä—É–∂–∞–µ–º —Ñ—É–Ω–∫—Ü–∏—é toYouTubeEmbed –∏–∑ –≥–ª–æ–±–∞–ª—å–Ω–æ–≥–æ —Å–∫—Ä–∏–ø—Ç–∞, –µ—Å–ª–∏ –æ–Ω–∞ —Ç–∞–º –µ—Å—Ç—å
    // –ï—Å–ª–∏ –Ω–µ—Ç, –æ–ø—Ä–µ–¥–µ–ª—è–µ–º –ª–æ–∫–∞–ª—å–Ω–æ (—É–ø—Ä–æ—â–µ–Ω–Ω–∞—è –≤–µ—Ä—Å–∏—è –¥–ª—è –∏–∑–±–µ–∂–∞–Ω–∏—è –æ—à–∏–±–∫–∏ 153)
    if (typeof toYouTubeEmbed === 'undefined') {
      function toYouTubeEmbed(url) {
        try {
          if (!url || typeof url !== 'string') return null;
          url = url.trim();
          
          // –ï—Å–ª–∏ —É–∂–µ embed URL, –∏–∑–≤–ª–µ–∫–∞–µ–º video ID
          if (url.includes('/embed/')) {
            const embedId = url.match(/embed\/([^?&#]+)/)?.[1];
            if (embedId) {
              // –ò—Å–ø–æ–ª—å–∑—É–µ–º –æ–±—ã—á–Ω—ã–π youtube.com –¥–ª—è –ª—É—á—à–µ–π —Å–æ–≤–º–µ—Å—Ç–∏–º–æ—Å—Ç–∏
              return `https://www.youtube.com/embed/${embedId}`;
            }
          }
          
          const u = new URL(url);
          const host = u.hostname.replace(/^www\./, "").toLowerCase();
          let videoId = null;
          
          if (host.includes("youtube.com")) {
            if (u.pathname === "/watch") {
              videoId = u.searchParams.get("v");
            } else if (u.pathname.startsWith("/embed/")) {
              videoId = u.pathname.split("/embed/")[1]?.split("?")[0];
            } else if (u.pathname.startsWith("/shorts/")) {
              videoId = u.pathname.split("/shorts/")[1]?.split("?")[0];
            } else if (u.pathname.startsWith("/v/")) {
              videoId = u.pathname.split("/v/")[1]?.split("?")[0];
            }
          } else if (host === "youtu.be") {
            videoId = u.pathname.slice(1).split("?")[0];
          }
          
          if (videoId) {
            videoId = videoId.split('&')[0].split('#')[0].trim();
            if (videoId) {
              // –ò—Å–ø–æ–ª—å–∑—É–µ–º –æ–±—ã—á–Ω—ã–π youtube.com –¥–ª—è –ª—É—á—à–µ–π —Å–æ–≤–º–µ—Å—Ç–∏–º–æ—Å—Ç–∏
              return `https://www.youtube.com/embed/${videoId}`;
            }
          }
          
          return null;
        } catch (err) {
          console.error("–û—à–∏–±–∫–∞ –ø—Ä–µ–æ–±—Ä–∞–∑–æ–≤–∞–Ω–∏—è YouTube URL:", err);
          return null;
        }
      }
    }

    document.addEventListener("DOMContentLoaded", () => {
      const form = document.getElementById("createProductForm");
      const msg = document.getElementById("createProductMsg");
      
      if (!form) {
        console.error("‚ùå –§–æ—Ä–º–∞ —Å–æ–∑–¥–∞–Ω–∏—è –∫–∞—Ä—Ç–æ—á–∫–∏ –Ω–µ –Ω–∞–π–¥–µ–Ω–∞!");
        return;
      }
      
      form.addEventListener("submit", async (e) => {
        e.preventDefault();
        e.stopPropagation();
        console.log("üì§ –û—Ç–ø—Ä–∞–≤–∫–∞ —Ñ–æ—Ä–º—ã —Å–æ–∑–¥–∞–Ω–∏—è –∫–∞—Ä—Ç–æ—á–∫–∏ (–ø–µ—Ä–µ—Ö–≤–∞—á–µ–Ω–æ JavaScript)");
        
        const formData = new FormData(form);
        console.log("–î–∞–Ω–Ω—ã–µ —Ñ–æ—Ä–º—ã:", {
          name: formData.get("name"),
          price: formData.get("price"),
          category: formData.get("category"),
          hasImage: !!formData.get("image")
        });
        
        try {
        const res = await fetch("/cabinet/product", { method: "POST", body: formData });
        const json = await res.json();
          console.log("–û—Ç–≤–µ—Ç —Å–µ—Ä–≤–µ—Ä–∞:", json);
          
        if (json.success) {
          msg.textContent = "–ö–∞—Ä—Ç–æ—á–∫–∞ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω–∞ –Ω–∞ –º–æ–¥–µ—Ä–∞—Ü–∏—é.";
          msg.style.color = "green";
          setTimeout(() => location.reload(), 800);
        } else {
          msg.textContent = json.message || "–û—à–∏–±–∫–∞";
            msg.style.color = "#b00020";
            console.error("–û—à–∏–±–∫–∞ —Å–æ–∑–¥–∞–Ω–∏—è –∫–∞—Ä—Ç–æ—á–∫–∏:", json.message);
          }
        } catch (err) {
          console.error("–û—à–∏–±–∫–∞ —Å–µ—Ç–∏:", err);
          msg.textContent = "–û—à–∏–±–∫–∞ —Å–µ—Ç–∏: " + err.message;
          msg.style.color = "#b00020";
        }
      });

      document.querySelectorAll(".priceForm").forEach((f) => {
        f.addEventListener("submit", async (e) => {
          e.preventDefault();
          const id = f.getAttribute("data-id");
          const price = f.querySelector("input[name='price']").value;
          const res = await fetch(`/cabinet/product/${id}/price`, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ price })
          });
          const json = await res.json();
          if (json.success) {
            document.querySelector(`.price[data-id='${id}']`).textContent = json.price;
          } else {
            alert(json.message || "–û—à–∏–±–∫–∞ –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è —Ü–µ–Ω—ã");
          }
        });
      });

      // –í–∏–¥–µ–æ –º–æ–¥–∞–ª–∫–∞
      const videoModal = document.getElementById("videoModal");
      const videoFrame = document.getElementById("videoFrame");

      // –ò—Å–ø–æ–ª—å–∑—É–µ–º –¥–µ–ª–µ–≥–∏—Ä–æ–≤–∞–Ω–∏–µ —Å–æ–±—ã—Ç–∏–π —Å capture phase –¥–ª—è –ø—Ä–∏–æ—Ä–∏—Ç–µ—Ç–∞
      document.addEventListener("click", (e) => {
        const btn = e.target.closest("[data-video]");
        if (!btn) return;
        
        e.preventDefault();
        e.stopPropagation();
        
        console.log("üñ±Ô∏è –ö–ª–∏–∫ –ø–æ –∫–Ω–æ–ø–∫–µ –≤–∏–¥–µ–æ:", btn);
        const url = btn.getAttribute("data-video");
        console.log("üìπ URL –∏–∑ –∞—Ç—Ä–∏–±—É—Ç–∞:", url);
        
        if (!url) {
          console.warn("‚ö†Ô∏è –ö–Ω–æ–ø–∫–∞ —Å data-video –Ω–µ —Å–æ–¥–µ—Ä–∂–∏—Ç URL");
          return;
        }
        
        const embedUrl = toYouTubeEmbed(url);
        console.log("üé¨ Embed URL:", embedUrl);
        
        if (embedUrl && videoModal && videoFrame) {
          // –§–æ—Ä–º–∏—Ä—É–µ–º —Ñ–∏–Ω–∞–ª—å–Ω—ã–π URL —Å autoplay –∏ mute –¥–ª—è –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–æ–≥–æ –≤–æ—Å–ø—Ä–æ–∏–∑–≤–µ–¥–µ–Ω–∏—è
          // –î–ª—è YouTube Shorts –∏ –æ–±—ã—á–Ω—ã—Ö –≤–∏–¥–µ–æ –∏—Å–ø–æ–ª—å–∑—É–µ–º —Å–ø–µ—Ü–∏–∞–ª—å–Ω—ã–µ –ø–∞—Ä–∞–º–µ—Ç—Ä—ã
          // –ò—Å–ø–æ–ª—å–∑—É–µ–º –ø—Ä–∞–≤–∏–ª—å–Ω—ã–µ –ø–∞—Ä–∞–º–µ—Ç—Ä—ã –¥–ª—è –∏–∑–±–µ–∂–∞–Ω–∏—è –æ—à–∏–±–∫–∏ 153
          let finalUrl = embedUrl;
          if (finalUrl.includes("?")) {
            finalUrl += "&autoplay=1&mute=1&rel=0&enablejsapi=1&playsinline=1&controls=1";
          } else {
            finalUrl += "?autoplay=1&mute=1&rel=0&enablejsapi=1&playsinline=1&controls=1";
          }
          console.log("üé• –ó–∞–≥—Ä—É–∑–∫–∞ –≤–∏–¥–µ–æ —Å autoplay:", finalUrl);
          
          // –û—á–∏—â–∞–µ–º –ø—Ä–µ–¥—ã–¥—É—â–∏–π src
          videoFrame.src = "";
          
          // –û—Ç–∫—Ä—ã–≤–∞–µ–º –º–æ–¥–∞–ª—å–Ω–æ–µ –æ–∫–Ω–æ
          videoModal.style.display = "block";
          videoModal.setAttribute("aria-hidden", "false");
          
          // –£–±–µ–∂–¥–∞–µ–º—Å—è, —á—Ç–æ iframe –≤–∏–¥–∏–º
          videoFrame.style.display = "block";
          videoFrame.style.visibility = "visible";
          videoFrame.style.opacity = "1";
          
          // –ó–∞–≥—Ä—É–∂–∞–µ–º –≤–∏–¥–µ–æ –≤ —Å–ª–µ–¥—É—é—â–µ–º –∫–∞–¥—Ä–µ —Å –ø—Ä–æ–≤–µ—Ä–∫–æ–π –≤–∏–¥–∏–º–æ—Å—Ç–∏
          requestAnimationFrame(() => {
            // –ü—Ä–æ–≤–µ—Ä—è–µ–º –≤–∏–¥–∏–º–æ—Å—Ç—å iframe –ø–µ—Ä–µ–¥ –∑–∞–≥—Ä—É–∑–∫–æ–π
            const isVisible = videoFrame.offsetWidth > 0 && videoFrame.offsetHeight > 0;
            console.log("üì∫ iframe –≤–∏–¥–∏–º—ã–π –ø–µ—Ä–µ–¥ –∑–∞–≥—Ä—É–∑–∫–æ–π:", isVisible, "width:", videoFrame.offsetWidth, "height:", videoFrame.offsetHeight);
            
            if (!isVisible) {
              console.warn("‚ö†Ô∏è iframe –Ω–µ –≤–∏–¥–∏–º—ã–π, –∂–¥–µ–º –µ—â–µ...");
              setTimeout(() => {
                try {
                  videoFrame.src = finalUrl;
                  console.log("‚úÖ –í–∏–¥–µ–æ URL —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω (—Å –∑–∞–¥–µ—Ä–∂–∫–æ–π):", videoFrame.src);
                } catch (err) {
                  console.error("‚ùå –û—à–∏–±–∫–∞ –ø—Ä–∏ —É—Å—Ç–∞–Ω–æ–≤–∫–µ src:", err);
                }
              }, 300);
            } else {
              try {
                videoFrame.src = finalUrl;
                console.log("‚úÖ –í–∏–¥–µ–æ URL —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω:", videoFrame.src);
                
                // –ü—Ä–æ–≤–µ—Ä—è–µ–º, —á—Ç–æ src —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω
                setTimeout(() => {
                  const currentSrc = videoFrame.src;
                  if (currentSrc && currentSrc.includes("youtube")) {
                    console.log("‚úÖ –í–∏–¥–µ–æ —É—Å–ø–µ—à–Ω–æ –∑–∞–≥—Ä—É–∂–µ–Ω–æ –≤ iframe");
                    console.log("üì∫ iframe –≥–æ—Ç–æ–≤ –∫ –≤–æ—Å–ø—Ä–æ–∏–∑–≤–µ–¥–µ–Ω–∏—é (–ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å –º–æ–∂–µ—Ç –Ω–∞–∂–∞—Ç—å play)");
                  } else {
                    console.error("‚ùå –ü—Ä–æ–±–ª–µ–º–∞: src iframe –Ω–µ —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω –ø—Ä–∞–≤–∏–ª—å–Ω–æ");
                    console.log("üì∫ –¢–µ–∫—É—â–∏–π src iframe:", currentSrc);
                  }
                }, 300);
              } catch (err) {
                console.error("‚ùå –û—à–∏–±–∫–∞ –ø—Ä–∏ —É—Å—Ç–∞–Ω–æ–≤–∫–µ src:", err);
              }
            }
          });
        } else {
          console.error("‚ùå –ù–µ —É–¥–∞–ª–æ—Å—å –ø—Ä–µ–æ–±—Ä–∞–∑–æ–≤–∞—Ç—å URL –≤–∏–¥–µ–æ:", url);
          alert("–ù–µ–∫–æ—Ä—Ä–µ–∫—Ç–Ω–∞—è —Å—Å—ã–ª–∫–∞ –Ω–∞ –≤–∏–¥–µ–æ. –ü–æ–¥–¥–µ—Ä–∂–∏–≤–∞—é—Ç—Å—è —Ç–æ–ª—å–∫–æ —Å—Å—ã–ª–∫–∏ YouTube.");
        }
      }, true); // Capture phase –¥–ª—è –ø—Ä–∏–æ—Ä–∏—Ç–µ—Ç–∞

      // –§—É–Ω–∫—Ü–∏—è –∑–∞–∫—Ä—ã—Ç–∏—è –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞
      function closeVideoModal() {
        console.log("‚ùå –ó–∞–∫—Ä—ã—Ç–∏–µ –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞ –≤–∏–¥–µ–æ");
        if (videoModal) {
          videoModal.style.display = "none";
          // –£–±–∏—Ä–∞–µ–º aria-hidden —Ç–æ–ª—å–∫–æ –ø–æ—Å–ª–µ —Ç–æ–≥–æ, –∫–∞–∫ —ç–ª–µ–º–µ–Ω—Ç –ø–æ—Ç–µ—Ä—è–ª —Ñ–æ–∫—É—Å
          setTimeout(() => {
            if (videoModal.style.display === "none") {
              videoModal.setAttribute("aria-hidden", "true");
            }
          }, 100);
        }
        if (videoFrame) {
          videoFrame.src = "";
        }
      }
      
      // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –∫–Ω–æ–ø–∫–∏ –∑–∞–∫—Ä—ã—Ç–∏—è
      function setupCloseHandlers() {
        const closeBtn = document.querySelector("[data-close-video]");
        if (closeBtn) {
          // –£–¥–∞–ª—è–µ–º —Å—Ç–∞—Ä—ã–π –æ–±—Ä–∞–±–æ—Ç—á–∏–∫, –µ—Å–ª–∏ –µ—Å—Ç—å
          closeBtn.replaceWith(closeBtn.cloneNode(true));
          const newCloseBtn = document.querySelector("[data-close-video]");
          
          newCloseBtn.addEventListener("click", (e) => {
            e.preventDefault();
            e.stopPropagation();
            e.stopImmediatePropagation(); // –û—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –≤—Å–µ –æ–±—Ä–∞–±–æ—Ç—á–∏–∫–∏
            closeVideoModal();
          });
        }
      }
      
      // –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –æ–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –ø–æ—Å–ª–µ –∑–∞–≥—Ä—É–∑–∫–∏
      setupCloseHandlers();

      // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –∫–ª–∏–∫–∞ –≤–Ω–µ –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞ (—Ç–æ–ª—å–∫–æ –Ω–∞ overlay)
      window.addEventListener("click", (e) => {
        // –ü—Ä–æ–≤–µ—Ä—è–µ–º, —á—Ç–æ –∫–ª–∏–∫ –∏–º–µ–Ω–Ω–æ –Ω–∞ overlay (—Å–∞–º modal), –∞ –Ω–µ –Ω–∞ –µ–≥–æ —Å–æ–¥–µ—Ä–∂–∏–º–æ–µ
        if (e.target === videoModal && videoModal.style.display === "block") {
          closeVideoModal();
        }
      });

      // –ó–∞–∫—Ä—ã—Ç–∏–µ –ø–æ Escape
      window.addEventListener("keydown", (e) => {
        if (e.key === "Escape" && videoModal && videoModal.style.display === "block") {
          closeVideoModal();
        }
      });
    });
  </script>

