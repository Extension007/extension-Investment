<!-- YouTube API -->
<script src="https://www.youtube.com/iframe_api"></script>

<script>
  let playerCabinet = null;
  let playerReadyCabinet = false; // —Ñ–ª–∞–≥ –≥–æ—Ç–æ–≤–Ω–æ—Å—Ç–∏
  let currentVideoIdCabinet = null;

  function onPlayerReadyCabinet(event) {
    console.log("‚úÖ –ü–ª–µ–µ—Ä –≥–æ—Ç–æ–≤ (cabinet)");
    playerReadyCabinet = true; // —Ç–æ–ª—å–∫–æ –æ—Ç–º–µ—á–∞–µ–º –≥–æ—Ç–æ–≤–Ω–æ—Å—Ç—å, –±–µ–∑ –∞–≤—Ç–æ–∑–∞–≥—Ä—É–∑–∫–∏
  }

  function onPlayerErrorCabinet(e) {
    console.error("‚ùå –û—à–∏–±–∫–∞ –ø–ª–µ–µ—Ä–∞ (cabinet):", e?.data);
    if (e?.data === 153 && currentVideoIdCabinet) {
      const url = "https://www.youtube.com/watch?v=" + currentVideoIdCabinet;
      window.open(url, "_blank", "noopener,noreferrer");
    }
  }

  function initCabinetPlayer() {
    try {
      playerCabinet = new YT.Player('videoFrame', {
        width: '100%',
        height: '480',
        playerVars: { rel: 0, playsinline: 1 },
        events: {
          'onReady': onPlayerReadyCabinet,
          'onError': onPlayerErrorCabinet
        }
      });
    } catch (err) {
      console.error("‚ùå –û—à–∏–±–∫–∞ —Å–æ–∑–¥–∞–Ω–∏—è –ø–ª–µ–µ—Ä–∞ (cabinet):", err);
    }
  }

  window.addEventListener("load", () => {
    if (typeof YT !== "undefined" && YT.Player) {
      initCabinetPlayer();
    } else {
      const t = setInterval(() => {
        if (typeof YT !== "undefined" && YT.Player) {
          clearInterval(t);
          initCabinetPlayer();
        }
      }, 100);
      setTimeout(() => clearInterval(t), 5000);
    }
  });
</script>

<script>
  function extractVideoId(url) {
    if (!url) return null;
    if (url.includes('/embed/')) return url.split('/embed/')[1].split(/[?#]/)[0];
    if (url.includes('/shorts/')) return url.split('/shorts/')[1].split(/[?#]/)[0];
    if (url.includes('youtu.be/')) return url.split('youtu.be/')[1].split(/[?#]/)[0];
    const match = url.match(/[?&]v=([^&]+)/);
    return match ? match[1] : null;
  }

  document.addEventListener("DOMContentLoaded", () => {
    const form = document.getElementById("createProductForm");
    const msg = document.getElementById("createProductMsg");

    if (form) {
      form.addEventListener("submit", async (e) => {
        e.preventDefault();
        const formData = new FormData(form);
        try {
          const res = await fetch("/cabinet/product", { method: "POST", body: formData });
          const json = await res.json();
          if (json.success) {
            msg.textContent = "–ö–∞—Ä—Ç–æ—á–∫–∞ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω–∞ –Ω–∞ –º–æ–¥–µ—Ä–∞—Ü–∏—é.";
            msg.style.color = "green";
            setTimeout(() => location.reload(), 800);
          } else {
            msg.textContent = json.message || "–û—à–∏–±–∫–∞";
            msg.style.color = "#b00020";
          }
        } catch (err) {
          msg.textContent = "–û—à–∏–±–∫–∞ —Å–µ—Ç–∏: " + err.message;
          msg.style.color = "#b00020";
        }
      });
    }

    document.querySelectorAll(".priceForm").forEach((f) => {
      f.addEventListener("submit", async (e) => {
        e.preventDefault();
        const id = f.getAttribute("data-id");
        const price = f.querySelector("input[name='price']").value;
        try {
          const res = await fetch(`/cabinet/product/${id}/price`, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ price })
          });
          const json = await res.json();
          if (json.success) {
            const priceEl = document.querySelector(`.price[data-id='${id}']`);
            if (priceEl) priceEl.textContent = json.price;
          } else {
            alert(json.message || "–û—à–∏–±–∫–∞ –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è —Ü–µ–Ω—ã");
          }
        } catch (err) {
          alert("–û—à–∏–±–∫–∞ —Å–µ—Ç–∏: " + err.message);
        }
      });
    });

    const videoModal = document.getElementById("videoModal");

    // –û—Ç–∫—Ä—ã—Ç–∏–µ –≤–∏–¥–µ–æ (iOS-safe)
    document.addEventListener('click', async (e) => {
      const btn = e.target.closest('.btn[data-video]');
      if (!btn) return;

      const url = btn.getAttribute('data-video');
      const videoId = extractVideoId(url);
      if (!videoId) return;

      currentVideoIdCabinet = videoId;
      videoModal.style.display = 'block';
      videoModal.setAttribute('aria-hidden', 'false');

      if (!playerCabinet || !playerReadyCabinet) {
        console.warn("‚ö†Ô∏è –ü–ª–µ–µ—Ä –µ—â—ë –Ω–µ –≥–æ—Ç–æ–≤, –∂–¥—ë–º...");
        await new Promise(r => setTimeout(r, 200));
      }

      try {
        if (playerCabinet) {
          playerCabinet.cueVideoById(currentVideoIdCabinet);
          playerCabinet.playVideo();
          console.log("üé¨ –ó–∞–ø—É—Å–∫ –≤–∏–¥–µ–æ:", currentVideoIdCabinet);
        }
      } catch (err) {
        console.error("‚ùå –û—à–∏–±–∫–∞ –∑–∞–ø—É—Å–∫–∞, –æ—Ç–∫—Ä—ã–≤–∞–µ–º –≤ –Ω–æ–≤–æ–π –≤–∫–ª–∞–¥–∫–µ:", err);
        window.open(url, '_blank', 'noopener,noreferrer');
      }
    });

    const closeBtn = document.querySelector('[data-close-video]');
    if (closeBtn) {
      closeBtn.addEventListener('click', () => {
        videoModal.style.display = 'none';
        videoModal.setAttribute('aria-hidden', 'true');
        if (playerCabinet && typeof playerCabinet.stopVideo === 'function') {
          playerCabinet.stopVideo();
        }
      });
    }
  });
</script>

