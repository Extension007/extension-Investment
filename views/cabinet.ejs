  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const form = document.getElementById("createProductForm");
      const msg = document.getElementById("createProductMsg");
      form?.addEventListener("submit", async (e) => {
        e.preventDefault();
        const formData = new FormData(form); // –æ—Ç–ø—Ä–∞–≤–ª—è–µ–º multipart, —á—Ç–æ–±—ã –ø–µ—Ä–µ–¥–∞—Ç—å —Ñ–∞–π–ª
        const res = await fetch("/cabinet/product", { method: "POST", body: formData });
        const json = await res.json();
        if (json.success) {
          msg.textContent = "–ö–∞—Ä—Ç–æ—á–∫–∞ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω–∞ –Ω–∞ –º–æ–¥–µ—Ä–∞—Ü–∏—é.";
          msg.style.color = "green";
          setTimeout(() => location.reload(), 800);
        } else {
          msg.textContent = json.message || "–û—à–∏–±–∫–∞";
          msg.style.color = "#b00020";
        }
      });

      document.querySelectorAll(".priceForm").forEach((f) => {
        f.addEventListener("submit", async (e) => {
          e.preventDefault();
          const id = f.getAttribute("data-id");
          const price = f.querySelector("input[name='price']").value;
          const res = await fetch(`/cabinet/product/${id}/price`, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ price })
          });
          const json = await res.json();
          if (json.success) {
            document.querySelector(`.price[data-id='${id}']`).textContent = json.price;
          } else {
            alert(json.message || "–û—à–∏–±–∫–∞ –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è —Ü–µ–Ω—ã");
          }
